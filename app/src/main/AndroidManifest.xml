<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vitaminbacon.lockscreendialer">

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.MODIFY_PHONE_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />

    <uses-feature
        android:name="android.hardware.telephony"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light">
        <activity
            android:name=".SettingsActivity"
            android:configChanges="keyboardHidden|screenSize|orientation"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".services.ScreenEventReceiver"
            android:enabled="true"
            android:exported="false" >
        </receiver>

        <activity
            android:name=".LockScreenActivity"
            android:label="@string/title_activity_lock_screen"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.NoBackground" >
        </activity>
        <activity
            android:name=".SpeedDialSelectionActivity"
            android:label="@string/title_activity_speed_dial_selection"
            android:parentActivityName=".SettingsActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vitaminbacon.lockscreendialer.SettingsActivity" />
        </activity>
        <activity
            android:name=".ContactSelectionActivity"
            android:label="@string/title_activity_contact_selection"
            android:parentActivityName=".SpeedDialSelectionActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vitaminbacon.lockscreendialer.SpeedDialSelectionActivity" />
        </activity>

        <service
            android:name=".services.LockScreenService"
            android:enabled="true"
            android:exported="false" >
        </service>

        <activity
            android:name=".LockScreenSelectionActivity"
            android:label="@string/title_activity_lock_screen_selection"
            android:parentActivityName=".SettingsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vitaminbacon.lockscreendialer.SettingsActivity" />
        </activity>
        <activity
            android:name=".KeypadPatternConfigActivity"
            android:label="@string/title_activity_keypad_pattern_config"
            android:parentActivityName=".LockScreenSelectionActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vitaminbacon.lockscreendialer.LockScreenSelectionActivity" />
        </activity>
        <activity
            android:name=".KeypadPinConfigActivity"
            android:label="@string/title_activity_keypad_pin_config"
            android:parentActivityName=".LockScreenSelectionActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysVisible|adjustResize" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vitaminbacon.lockscreendialer.LockScreenSelectionActivity" />
        </activity>
        <activity
            android:name=".LockScreenKeypadPinActivity"
            android:configChanges="keyboardHidden|screenSize|orientation"
            android:label="@string/title_activity_lock_screen_keypad_pin"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait"
            android:theme="@style/lock_screen_window_theme">
        </activity>
        <activity
            android:name=".LockScreenKeypadPatternActivity"
            android:configChanges="keyboardHidden|screenSize|orientation"
            android:label="@string/title_activity_lock_screen_keypad_pattern"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait"
            android:theme="@style/lock_screen_window_theme" />
        <activity
            android:name=".ErrorPageActivity"
            android:label="@string/title_activity_error_page"
            android:noHistory="true"
            android:theme="@style/lock_screen_window_theme">
        </activity>

        <receiver
            android:name=".services.PhoneCallReceiver"
            android:enabled="true"
            android:exported="false" >
            <intent-filter android:priority="0" >
                <action android:name="android.intent.action.PHONE_STATE" />
                <action android:name="android.intent.action.NEW_OUTGOING_CALL" />
            </intent-filter>
        </receiver>

        <service
            android:name=".services.PhoneStateService"
            android:enabled="true"
            android:exported="false" >
        </service>

        <activity
            android:name=".LockScreenLauncherActivity"
            android:label="@string/title_activity_lock_screen_launcher"
            android:launchMode="singleInstance"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/lock_screen_window_theme" />
        <activity
            android:name=".BackgroundSelectionActivity"
            android:label="@string/title_activity_background_selection"
            android:parentActivityName=".SettingsActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vitaminbacon.lockscreendialer.SettingsActivity" />
        </activity>

        <receiver
            android:name=".services.BootReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter android:priority="1000">
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".AppBackgroundActivity"
            android:label="@string/title_activity_app_background"
            android:parentActivityName=".SettingsActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vitaminbacon.lockscreendialer.SettingsActivity" />
        </activity>
    </application>

</manifest>
