<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vitaminbacon.lockscreendialer"
    android:theme="@android:style/Theme.Holo.Light" >

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".SettingsActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".LockScreenEventReceiver"
            android:enabled="true"
            android:exported="true" >
        </receiver>

        <activity
            android:name=".LockScreen"
            android:label="@string/title_activity_lock_screen" >
        </activity>
        <activity
            android:name=".LockScreenActivity"
            android:label="@string/title_activity_lock_screen" >
        </activity>
        <activity
            android:name=".SpeedDialSelectionActivity"
            android:label="@string/title_activity_speed_dial_selection"
            android:parentActivityName=".SettingsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vitaminbacon.lockscreendialer.SettingsActivity" />
        </activity>
        <activity
            android:name=".ContactSelectionActivity"
            android:label="@string/title_activity_contact_selection"
            android:parentActivityName=".SpeedDialSelectionActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vitaminbacon.lockscreendialer.SpeedDialSelectionActivity" />
        </activity>

        <service
            android:name=".LockScreenService"
            android:enabled="true"
            android:exported="true" >

        </service>
    </application>

</manifest>
