<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="end_call_button">
        <item name="android:textSize">60dp</item>
        <item name="android:background">@color/lava_red</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="lock_screen_call_display">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="background_selection_buttons">
        <item name="android:textAllCaps">false</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:background">@drawable/selector_background_activity</item>
    </style>

    <style name="typeface_phone_call_info">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/typeface_phone_call_info_text_size</item>
        <item name="android:layout_marginTop">@dimen/typeface_phone_call_info_text_margin</item>
        <item name="android:layout_marginLeft">@dimen/typeface_phone_call_info_text_margin</item>
    </style>

    <style name="typeface_phone_call_description">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/typeface_phone_call_description_text_size</item>
        <item name="android:layout_marginLeft">@dimen/typeface_phone_call_info_text_margin</item>
        <item name="android:textStyle">italic</item>
    </style>


</resources>