<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:displayOptions">showHome|homeAsUp|showTitle</item>
    </style>

    <style name="Theme.NoBackground" parent="android:Theme">
        <item name="android:windowBackground">@null</item>
    </style>



    <style name="key_pad_buttons">
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@color/gunmetal</item>
        <item name="android:textSize">50sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/selector_speed_dial</item>
    </style>

    <style name="key_pad_dividers">
        <item name="android:background">@color/gray_goose</item>
        <item name="android:layout_weight">0</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="dialog_buttons">
        <item name="android:textColor">@color/black_cow</item>
        <item name="android:textSize">@dimen/abc_text_size_medium_material</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/selector_dialog_buttons</item>
    </style>

    <style name="dialog_title_bar">
        <item name="android:textSize">20sp</item>
        <item name="android:background">@color/gunmetal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">10dp</item>

    </style>

    <style name="dialog_title_bar_close">
        <item name="android:textSize">20sp</item>
        <item name="android:background">@color/gunmetal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:padding">10dp</item>
    </style>


    <style name="list_item_selection">
        <item name="android:padding">30dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/selector_speed_dial</item>
    </style>

    <style name="list_item_selection_summary">

    </style>

    <style name="general_instruction">
        <item name="android:padding">15dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="ancilliary_instruction">
        <item name="android:padding">2dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>



    <style name="key_pad_buttons_speed_dial_selection">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">40dp</item>
        <item name="android:paddingBottom">40dp</item>
        <item name="android:background">@drawable/selector_speed_dial</item>
    </style>

    <style name="key_pad_buttons_speed_dial_selection_digits">
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">35sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:paddingLeft">12dp</item>
    </style>

    <style name="key_pad_buttons_speed_dial_selection_alphabetics">
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>


    <style name="lock_screen_padding">
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
    </style>

    <style name="color_list_item">
        <item name="android:textSize">20dp</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="font_list_item">
        <item name="android:textSize">25dp</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="holo_dialog_title_bar">
        <item name="android:textColor">@color/holo_blue</item>
        <item name="android:textSize">@dimen/abc_text_size_large_material</item>
        <item name="android:padding">15dp</item>
        <item name="android:background">@color/white</item>
    </style>
</resources>
