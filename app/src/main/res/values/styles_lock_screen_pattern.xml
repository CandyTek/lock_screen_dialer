<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="pattern_buttons_lock_screen">
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@color/milk_white</item>
        <item name="android:textSize">35sp</item>
        <item name="android:layout_width">@dimen/lock_screen_pattern_button_diameter</item>
        <item name="android:layout_height">@dimen/lock_screen_pattern_button_diameter</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:background">@drawable/selector_pattern_button</item>
    </style>

    <style name="pattern_buttons_lock_screen_digits">
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">35sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">5</item>
    </style>
</resources>