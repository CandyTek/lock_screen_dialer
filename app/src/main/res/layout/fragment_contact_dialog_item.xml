<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/phone_num_list_item"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/phone_selector_list_item_pic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_action_call"

        android:layout_margin="5dp"
        />

 <!--
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/contact_selector_list_item_pic">
-->
    <TextView
        android:id="@+id/phone_selector_list_item_phone_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/phone_selector_list_item_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:padding="5dp"/>



</LinearLayout>