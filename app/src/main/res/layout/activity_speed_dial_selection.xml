<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    tools:context="com.vitaminbacon.lockscreendialer.SpeedDialSelectionActivity">


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:padding="5dp"
        android:text="@string/speed_dial_selection_instructions"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:padding="5dp"
        android:text="@string/speed_dial_selection_details"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/speed_dial_selection_1"
                style="@style/key_pad_buttons_speed_dial_selection"
                android:onClick="assignSpeedDialContact" />

            <View
                android:id="@+id/speed_dial_selection_bkgrd_1"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

                <TextView
                    style="@style/key_pad_buttons_speed_dial_selection_digits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1" />
            </LinearLayout>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/speed_dial_selection_2"
                style="@style/key_pad_buttons_speed_dial_selection"
                android:onClick="assignSpeedDialContact" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

                <TextView
                    style="@style/key_pad_buttons_speed_dial_selection_digits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2" />

                <TextView
                    style="@style/key_pad_buttons_speed_dial_selection_alphabetics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ABC" />
            </LinearLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/speed_dial_selection_3"
                style="@style/key_pad_buttons_speed_dial_selection"
                android:onClick="assignSpeedDialContact" />

            <View
                android:id="@+id/speed_dial_selection_bkgrd_3"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

                <TextView
                    style="@style/key_pad_buttons_speed_dial_selection_digits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3" />

                <TextView
                    style="@style/key_pad_buttons_speed_dial_selection_alphabetics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DEF" />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/speed_dial_selection_4"
                style="@style/key_pad_buttons_speed_dial_selection"
                android:onClick="assignSpeedDialContact" />

            <View
                android:id="@+id/speed_dial_selection_bkgrd_4"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

                <TextView
                    style="@style/key_pad_buttons_speed_dial_selection_digits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4" />

                <TextView
                    style="@style/key_pad_buttons_speed_dial_selection_alphabetics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GHI" />
            </LinearLayout>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/speed_dial_selection_5"
                style="@style/key_pad_buttons_speed_dial_selection"
                android:onClick="assignSpeedDialContact" />

            <View
                android:id="@+id/speed_dial_selection_bkgrd_5"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

                <TextView
                    style="@style/key_pad_buttons_speed_dial_selection_digits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5" />

                <TextView
                    style="@style/key_pad_buttons_speed_dial_selection_alphabetics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JKL" />
            </LinearLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button
                android:id="@+id/speed_dial_selection_6"
                style="@style/key_pad_buttons_speed_dial_selection"
                android:onClick="assignSpeedDialContact" />

            <View
                android:id="@+id/speed_dial_selection_bkgrd_6"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

                <TextView
                    style="@style/key_pad_buttons_speed_dial_selection_digits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6" />

                <TextView
                    style="@style/key_pad_buttons_speed_dial_selection_alphabetics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MNO" />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button
                android:id="@+id/speed_dial_selection_7"
                style="@style/key_pad_buttons_speed_dial_selection"
                android:onClick="assignSpeedDialContact" />

            <View
                android:id="@+id/speed_dial_selection_bkgrd_7"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

                <TextView
                    style="@style/key_pad_buttons_speed_dial_selection_digits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7" />

                <TextView
                    style="@style/key_pad_buttons_speed_dial_selection_alphabetics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PQRS" />
            </LinearLayout>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button
                android:id="@+id/speed_dial_selection_8"
                style="@style/key_pad_buttons_speed_dial_selection"
                android:onClick="assignSpeedDialContact" />

            <View
                android:id="@+id/speed_dial_selection_bkgrd_8"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

                <TextView
                    style="@style/key_pad_buttons_speed_dial_selection_digits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8" />

                <TextView
                    style="@style/key_pad_buttons_speed_dial_selection_alphabetics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TUV" />
            </LinearLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/speed_dial_selection_9"
                style="@style/key_pad_buttons_speed_dial_selection"
                android:onClick="assignSpeedDialContact" />

            <View
                android:id="@+id/speed_dial_selection_bkgrd_9"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

                <TextView
                    style="@style/key_pad_buttons_speed_dial_selection_digits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9" />

                <TextView
                    style="@style/key_pad_buttons_speed_dial_selection_alphabetics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WXYZ" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>