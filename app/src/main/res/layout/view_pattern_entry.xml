<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <com.vitbac.speeddiallocker.views.DrawView
        android:id="@+id/pattern_canvas"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <com.vitbac.speeddiallocker.views.DrawView
        android:id="@+id/touch_canvas"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <LinearLayout
        android:id="@+id/pattern_touch_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/pattern_row_spacer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/pattern_col_spacer"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/pattern_button_1"
                    style="@style/pattern_view_buttons"
                    android:text="1" />

                <View
                    android:id="@+id/pattern_marker_1"
                    style="@style/pattern_view_markers"
                    android:visibility="invisible"/>

            </RelativeLayout>


            <View
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/pattern_button_2"
                    style="@style/pattern_view_buttons"
                    android:text="2" />

                <View
                    android:id="@+id/pattern_marker_2"
                    style="@style/pattern_view_markers"
                    android:visibility="invisible"/>

            </RelativeLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/pattern_button_3"
                    style="@style/pattern_view_buttons"
                    android:text="3" />

                <View
                    android:id="@+id/pattern_marker_3"
                    style="@style/pattern_view_markers"
                    android:visibility="invisible"/>

            </RelativeLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/pattern_button_4"
                    style="@style/pattern_view_buttons"
                    android:text="4" />

                <View
                    android:id="@+id/pattern_marker_4"
                    style="@style/pattern_view_markers"
                    android:visibility="invisible"/>

            </RelativeLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/pattern_button_5"
                    style="@style/pattern_view_buttons"
                    android:text="5" />

                <View
                    android:id="@+id/pattern_marker_5"
                    style="@style/pattern_view_markers"
                    android:visibility="invisible"/>

            </RelativeLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/pattern_button_6"
                    style="@style/pattern_view_buttons"
                    android:text="6" />

                <View
                    android:id="@+id/pattern_marker_6"
                    style="@style/pattern_view_markers"
                    android:visibility="invisible"/>

            </RelativeLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/pattern_button_7"
                    style="@style/pattern_view_buttons"
                    android:text="7" />

                <View
                    android:id="@+id/pattern_marker_7"
                    style="@style/pattern_view_markers"
                    android:visibility="invisible"/>

            </RelativeLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/pattern_button_8"
                    style="@style/pattern_view_buttons"
                    android:text="8" />

                <View
                    android:id="@+id/pattern_marker_8"
                    style="@style/pattern_view_markers"
                    android:visibility="invisible"/>

            </RelativeLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/pattern_button_9"
                    style="@style/pattern_view_buttons"
                    android:text="9" />

                <View
                    android:id="@+id/pattern_marker_9"
                    style="@style/pattern_view_markers"
                    android:visibility="invisible"/>

            </RelativeLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>
</RelativeLayout>