<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_parent"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <TextView
        style="@style/holo_dialog_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/font_selection_instruction" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ff00ddff" />

    <ListView
        android:id="@+id/font_list"
        android:layout_width="match_parent"
        android:layout_height="@dimen/scroll_dialog_height"
        android:background="@color/white" />


</LinearLayout>