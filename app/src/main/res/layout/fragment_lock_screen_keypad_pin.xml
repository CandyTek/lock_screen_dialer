<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lock_screen_interaction_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    android:layout_weight="1"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">
        <TextView
            android:id="@+id/lock_screen_pin_display"
            style="@style/key_pad_pin_instruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="25dp"
            android:layout_marginRight="5dp"
            android:text="Enter PIN" />

        <Button
            android:id="@+id/lock_screen_pin_button_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/lock_screen_pin_display"
            android:background="@drawable/selector_speed_dial"
            android:minWidth="40dp"
            android:shadowColor="#000000"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="5"
            android:text="x"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:visibility="invisible" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button
                android:id="@+id/lock_screen_pin_button_1"
                style="@style/key_pad_buttons_lock_screen"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">
                <TextView
                    style="@style/key_pad_buttons_lock_screen_digits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1" />
            </LinearLayout>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button
                android:id="@+id/lock_screen_pin_button_2"

                style="@style/key_pad_buttons_lock_screen" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">
                <TextView
                    style="@style/key_pad_buttons_lock_screen_digits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2" />
                <TextView
                    style="@style/key_pad_buttons_lock_screen_alphabetics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ABC" />
            </LinearLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button
                android:id="@+id/lock_screen_pin_button_3"
                style="@style/key_pad_buttons_lock_screen"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">
                <TextView
                    style="@style/key_pad_buttons_lock_screen_digits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3" />
                <TextView
                    style="@style/key_pad_buttons_lock_screen_alphabetics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DEF" />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button
                android:id="@+id/lock_screen_pin_button_4"
                style="@style/key_pad_buttons_lock_screen"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">
                <TextView
                    style="@style/key_pad_buttons_lock_screen_digits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4" />
                <TextView
                    style="@style/key_pad_buttons_lock_screen_alphabetics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GHI" />
            </LinearLayout>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button
                android:id="@+id/lock_screen_pin_button_5"

                style="@style/key_pad_buttons_lock_screen" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">
                <TextView
                    style="@style/key_pad_buttons_lock_screen_digits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5" />
                <TextView
                    style="@style/key_pad_buttons_lock_screen_alphabetics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JKL" />
            </LinearLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button
                android:id="@+id/lock_screen_pin_button_6"
                style="@style/key_pad_buttons_lock_screen"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">
                <TextView
                    style="@style/key_pad_buttons_lock_screen_digits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6" />
                <TextView
                    style="@style/key_pad_buttons_lock_screen_alphabetics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MNO" />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button
                android:id="@+id/lock_screen_pin_button_7"
                style="@style/key_pad_buttons_lock_screen"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">
                <TextView
                    style="@style/key_pad_buttons_lock_screen_digits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7" />
                <TextView
                    style="@style/key_pad_buttons_lock_screen_alphabetics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PQRS" />
            </LinearLayout>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button
                android:id="@+id/lock_screen_pin_button_8"
                style="@style/key_pad_buttons_lock_screen" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">
                <TextView
                    style="@style/key_pad_buttons_lock_screen_digits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8" />
                <TextView
                    style="@style/key_pad_buttons_lock_screen_alphabetics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TUV" />
            </LinearLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button
                android:id="@+id/lock_screen_pin_button_9"
                style="@style/key_pad_buttons_lock_screen"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">
                <TextView
                    style="@style/key_pad_buttons_lock_screen_digits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9" />
                <TextView
                    style="@style/key_pad_buttons_lock_screen_alphabetics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WXYZ" />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:visibility="invisible">

            <View
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button
                android:id="@+id/lock_screen_pin_button_0"
                style="@style/key_pad_buttons_lock_screen"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">
                <TextView
                    style="@style/key_pad_buttons_lock_screen_digits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button
                android:id="@+id/lock_screen_pin_button_OK"
                style="@style/key_pad_buttons_lock_screen"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">
                <TextView
                    style="@style/key_pad_buttons_lock_screen_digits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OK" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>