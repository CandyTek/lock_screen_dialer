<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lock_screen_interaction_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    android:layout_weight="1"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">
        <TextView
            android:id="@+id/lock_screen_pattern_display"
            style="@style/key_pad_pattern_instruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lock_screen_keypad_pattern_instruction_1" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <com.vitaminbacon.lockscreendialer.views.DrawView
            android:id="@+id/lock_screen_pattern_canvas"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <com.vitaminbacon.lockscreendialer.views.DrawView
            android:id="@+id/lock_screen_touch_canvas"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />


        <LinearLayout
            android:id="@+id/lock_screen_pattern_touch_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:id="@+id/lock_screen_pattern_row_spacer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/lock_screen_pattern_col_spacer"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/lock_screen_pattern_button_1"
                    style="@style/pattern_buttons_lock_screen"
                    android:text="1" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/lock_screen_pattern_button_2"
                    style="@style/pattern_buttons_lock_screen"
                    android:text="2" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/lock_screen_pattern_button_3"
                    style="@style/pattern_buttons_lock_screen"
                    android:text="3" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/lock_screen_pattern_button_4"
                    style="@style/pattern_buttons_lock_screen"
                    android:text="4" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/lock_screen_pattern_button_5"
                    style="@style/pattern_buttons_lock_screen"
                    android:text="5" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/lock_screen_pattern_button_6"
                    style="@style/pattern_buttons_lock_screen"
                    android:text="6" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/lock_screen_pattern_button_7"
                    style="@style/pattern_buttons_lock_screen"
                    android:text="7" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/lock_screen_pattern_button_8"
                    style="@style/pattern_buttons_lock_screen"
                    android:text="8" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/lock_screen_pattern_button_9"
                    style="@style/pattern_buttons_lock_screen"
                    android:text="9" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>