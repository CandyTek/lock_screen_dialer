<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:key="toggle_lock_screen"
        android:title="@string/pref_title_toggle_lock_screen"
        android:summary="@string/pref_description_toggle_lock_screen"
        android:defaultValue="false" />

    <!-- A preference that directs you to a new activity to select speed dial contacts -->
    <Preference
        android:key="select_speed_dial_contacts"
        android:title="@string/pref_title_assign_speed_dial_contacts"
        android:summary="@string/pref_description_assign_speed_dial_contacts" >
        <intent
            android:action="android.intent.action.MAIN"
            android:targetPackage="com.vitaminbacon.lockscreendialer"
            android:targetClass="com.vitaminbacon.lockscreendialer.SpeedDialSelectionActivity" />
    </Preference>

    <!-- A list of available lock screen mechanisms to bypass to access phone -->
    <ListPreference
        android:key="select_screen_lock_type"
        android:title="@string/pref_title_select_screen_lock_type"
        android:defaultValue="-1"
        android:entries="@array/pref_screen_lock_types_titles"
        android:entryValues="@array/pref_screen_lock_types_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

