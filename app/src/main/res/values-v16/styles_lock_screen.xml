<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="pattern_buttons_lock_screen">
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textColor">@color/milk_white</item>
        <item name="android:textSize">35sp</item>
        <item name="android:layout_width">@dimen/lock_screen_pattern_button_diameter</item>
        <item name="android:layout_height">@dimen/lock_screen_pattern_button_diameter</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:background">@drawable/selector_pattern_button</item>
    </style>

    <style name="pattern_buttons_lock_screen_digits">
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">35sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="sheath_screen_instruction">
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">15dp</item>
        <item name="android:shadowColor">#CC000000</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:textSize">25dp</item>
    </style>

    <style name="lock_screen_clock">
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="lock_screen_date">
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <style name="sheath_screen_clock">
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textSize">55sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="sheath_screen_date">
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="lock_screen_info">
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="lock_screen_additional_widgets">
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:background">@drawable/selector_speed_dial</item>
    </style>


    <style name="pin_pad_buttons">
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">50sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/selector_speed_dial</item>
    </style>

    <style name="key_pad_buttons_lock_screen">
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">35sp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:gravity">left</item>
        <item name="android:background">@drawable/selector_speed_dial</item>
    </style>

    <style name="key_pad_buttons_lock_screen_digits">
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">35sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">5</item>

    </style>

